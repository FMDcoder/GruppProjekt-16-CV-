@using Models;
@model EducationValidate;

<div class="container">
	<div class="row">
		<h2 class="center-text">Ändra</h2>
		<input type="hidden" name="id" value="@Model.id" /> 
		<form asp-action="EducationEdit" method="post" class="centered">
			<div class="row">
				<div class="col-lg-8 col-12">
					<div asp-validation-summary="All" class="text-danger"></div>
				</div>
			</div>
			<input type="hidden" name="collectiveId" value="@Model.id" />
			<div class="row space col-lg-6 col-12">
				<div class="col-lg-2 col-12">
					<label>Skola: </label>
				</div>
				<div class="col-lg-8 col-12">
					<input asp-for="@Model.schoolTitle" class="form-control" />
				</div>
			</div>
			<div class="row space col-lg-6 col-12">
				<div class="col-lg-2 col-12">
					<label>Yrke: </label>
				</div>
				<div class="col-lg-8 col-12">
					<input asp-for="@Model.professionTitle" class="form-control" />
				</div>
			</div>
			<div class="row space col-lg-6 col-12">
				<div class="col-lg-2 col-12">
					<label>Tid: </label>
				</div>
				<div class="col-lg-8 col-12">
					<input asp-for="@Model.time" class="form-control" />
				</div>
			</div>
			<div class="row space col-lg-6 col-12">
				<div class="col-lg-3">
					<input type="submit" value="Ändra" class="form-control btn btn-primary" />
				</div>
			</div>
		</form>
	</div>
</div>