@model Models.UserLogInValidate;

@{
	ViewData["Title"] = "Logga in";
}

<div class="col-lg-6 col-12">
	<h2>Logga In</h2>
	<form method="post" asp-action="LogIn" data-toggle="validator" role="form">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group row space">
			<div class="col-4">
				<label>Namn:</label>
			</div>
			<div class="col-sm-6">
				<input asp-for="UserName" class="form-control" />
			</div>
		</div>
		<div class="form-group row space">
			<div class="col-4">
				<label>Lösenord:</label>
			</div>
			<div class="col-sm-6">
				<input asp-for="PasswordHash" class="form-control" />
			</div>
		</div>
		<div class="form-group row space">
			<div class="col-4">
				<label>Kom ihåg mig: </label>
			</div>
			<div class="col-6">
				<input asp-for="RememberMe" type="checkbox" checked="checked" />
			</div>
		</div>
		<div class="form-group row space">
			<div class="col-sm-6">
				<button type="submit" class="btn btn-primary">Logga in</button>
			</div>
		</div>
	</form>
</div>